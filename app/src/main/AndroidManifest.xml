<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.badlogic.androidgames"
    android:installLocation="preferExternal"
    android:versionCode="1"
    android:versionName="1.0">
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".AndroidBasicsStarter">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LifeCycleTest"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:label="Life Cycle Test" />
        <activity
            android:name=".SingleTouchTest"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:label="Single Touch Test" />
        <activity
        android:name=".MultiTouchTest"
        android:configChanges="keyboard|keyboardHidden|orientation"
        android:label="Multi Touch Test" />
        <activity
            android:name=".KeyTest"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:label="Key Test" />
        <activity
            android:name=".AccelerometerTest"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:label="Accelerometer Test" />
        <activity
            android:name=".CompassTest"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:label="Compass Test" />
        <activity
            android:name=".AssetsTest"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:label="Assets Test" />
        <activity
            android:name=".ExternalStorageTest"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:label="External Storage Test" />
        <activity
            android:name=".SoundPoolTest"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:label="SoundPool Test" />

    </application>

</manifest>